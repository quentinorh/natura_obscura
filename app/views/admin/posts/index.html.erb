<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-white">Gestion des Articles</h1>
    <%= link_to "Nouvel Article", new_admin_post_path, 
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>

  <div class="shadow overflow-hidden border-b border-gray-700 sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-700">
      <thead class="bg-gray-800">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Image</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Titre</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Date de création</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-gray-900 divide-y divide-gray-700">
        <% @posts.each do |post| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if post.image.attached? %>
                <%= image_tag post.image, 
                    class: "h-20 w-32 object-cover rounded-lg shadow-md", 
                    alt: post.title %>
              <% else %>
                <div class="h-20 w-32 bg-gray-800 rounded-lg flex items-center justify-center">
                  <span class="text-gray-400 text-sm">Pas d'image</span>
                </div>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm font-medium text-gray-200"><%= post.title %></td>
            <td class="px-6 py-4 text-sm text-gray-400"><%= l(post.created_at, format: :long) %></td>
            <td class="px-6 py-4 text-sm text-gray-400">
              <div class="flex space-x-4">
                <%= link_to "Éditer", edit_admin_post_path(post), 
                    class: "text-indigo-400 hover:text-indigo-300" %>
                <%= button_to "Supprimer", admin_post_path(post), 
                    method: :delete, 
                    data: { confirm: "Êtes-vous sûr ?" },
                    class: "text-red-400 hover:text-red-300 bg-transparent border-0 p-0 cursor-pointer" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 